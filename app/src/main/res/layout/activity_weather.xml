<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weather">

    <TextView
        android:id="@+id/tempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="39dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="106dp"
        android:text="Temp (F)"
        app:layout_constraintEnd_toStartOf="@+id/tempField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/conditionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="20dp"
        android:text="Condition"
        app:layout_constraintEnd_toStartOf="@+id/conditionField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempLabel" />

    <TextView
        android:id="@+id/sunriseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="22dp"
        android:text="Sunrise"
        app:layout_constraintEnd_toStartOf="@+id/sunriseField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conditionLabel" />

    <TextView
        android:id="@+id/sunsetLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="53dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="53dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="21dp"
        android:text="Sunset"
        app:layout_constraintEnd_toStartOf="@+id/sunsetField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sunriseLabel" />

    <TextView
        android:id="@+id/tempField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tempLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tempLabel"
        app:layout_constraintTop_toTopOf="@+id/tempLabel" />

    <TextView
        android:id="@+id/sunsetField"
        android:layout_width="161dp"
        android:layout_height="27dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sunsetLabel"
        app:layout_constraintTop_toBottomOf="@+id/sunriseField" />

    <TextView
        android:id="@+id/sunriseField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/sunriseLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sunriseLabel"
        app:layout_constraintTop_toTopOf="@+id/sunriseLabel" />

    <TextView
        android:id="@+id/conditionField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/conditionLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/conditionLabel"
        app:layout_constraintTop_toTopOf="@+id/conditionLabel" />

</android.support.constraint.ConstraintLayout>